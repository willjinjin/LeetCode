class Solution {
    public boolean isPalindrome(int x) {
        if(x < 0) {
            return false;
        }

        if(x < 10) {
            return true;
        }

        char[] nums = Integer.toString(x).toCharArray();

        int left = 0;
        int right = nums.length - 1;

        while(left < right) {
            if(nums[left] != nums[right]) {
                return false;
            }
            left++;
            right--;
        }
        return true;
    }
}